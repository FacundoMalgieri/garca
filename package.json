{
  "name": "garca-web",
  "version": "0.1.0",
  "private": true,
  "description": "Gestor Automático de Recuperación de Comprobantes de ARCA",
  "scripts": {
    "dev": "npm run kill-port && next dev",
    "build": "next build",
    "start": "npm run kill-port && next start",
    "kill-port": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage --no-watch",
    "update-monotributo": "npx tsx scripts/update-monotributo.ts",
    "docker:build": "bash -c 'set -a; source .env 2>/dev/null; set +a; docker build --build-arg NEXT_PUBLIC_TURNSTILE_SITE_KEY --build-arg NEXT_PUBLIC_SITE_URL --build-arg NEXT_PUBLIC_ENCRYPTION_KEY -t garca .'",
    "docker:run": "docker run -p 3000:3000 --env-file .env garca",
    "docker:dev": "npm run docker:build && npm run docker:run"
  },
  "dependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "next": "^16.0.0",
    "playwright": "^1.48.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^3.5.1",
    "tailwind-merge": "^2.3.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.0.0",
    "@tailwindcss/typography": "^0.5.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/crypto-js": "^4.2.2",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-istanbul": "^4.0.14",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "babel-plugin-react-compiler": "^1.0.0",
    "baseline-browser-mapping": "^2.8.32",
    "eslint": "^9.0.0",
    "eslint-config-next": "^16.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jsdom": "^25.0.0",
    "postcss": "^8.4.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.2.4",
    "vitest": "^4.0.14"
  }
}